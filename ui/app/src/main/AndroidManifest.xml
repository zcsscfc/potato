<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.potato">

    <application
        android:name=".PotatoApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegeditActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".DetailActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".AboutActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".FeedbackActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ToReadActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".MyFavActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".SubTopicActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".SubSiteActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".FindTopicActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".FindSiteActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".GuideActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserInfoActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>