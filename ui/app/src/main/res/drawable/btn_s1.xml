<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#0d76e1" android:startColor="#0d76e1" />

            <stroke android:width="0dip" android:color="#B7B7B7" />

            <corners android:radius="0dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#ffc2b7" android:startColor="#ffc2b7" />

            <stroke android:width="0dip" android:color="#B7B7B7" />

            <corners android:radius="0dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#C50023" android:startColor="#C50023"></gradient>

            <stroke android:width="0dip" android:color="#B7B7B7" />

            <corners android:radius="0dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>