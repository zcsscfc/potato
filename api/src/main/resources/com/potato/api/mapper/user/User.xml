    <select id="select_user_logName" resultType="com.potato.api.entity.UserEntity"
            parameterType="String">
        SELECT * FROM sys_user WHERE log_name=#{logName}
    </select>

    <insert id="insert_user" parameterType="com.potato.api.entity.UserEntity">
        INSERT INTO sys_user(
          user_id,
          log_name,
          wechat,
          password,
          nick_name,
          mobile,
          create_t
        )VALUES (
          #{userId},
          #{logName},
          #{wechat},
          #{password},
          #{nickName},
          #{mobile},
          #{createT}
        )
    </insert>

    <update id="update_user" parameterType="com.potato.api.entity.UserEntity">
        UPDATE sys_user SET
        wechat=#{wechat},
        mobile=#{mobile},
        nick_name=#{nickName},
        photo=#{photo}
        WHERE user_id=#{userId}
    </update>

    <select id="select_userid" resultType="BigInteger">
        SELECT f_getid('user_id')
    </select>
